# Etapa de construcci칩n
FROM node:18-alpine AS build

WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# Etapa de producci칩n
FROM nginx:alpine

COPY --from=build /app/build /usr/share/nginx/html

# Configuraci칩n de Nginx para React Router y archivos est치ticos
RUN echo 'server { \
    listen 80; \
    location /Prueba/ { \
        root /usr/share/nginx/html; \
        index index.html index.htm; \
        try_files $uri $uri/ /Prueba/index.html; \
    } \
    location /static/ { \
        alias /usr/share/nginx/html/static/; \
        expires 1y; \
        add_header Cache-Control "public"; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]